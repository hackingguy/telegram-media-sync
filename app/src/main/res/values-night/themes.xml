<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TelegramDrive.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/telegram_blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/telegram_blue_light</item>
        <item name="colorSecondaryVariant">@color/telegram_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/telegram_background</item>
        <item name="colorSurface">@color/telegram_surface</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/telegram_primary_text</item>
        <item name="android:textColorSecondary">@color/telegram_secondary_text</item>
    </style>
</resources> 